<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page2"
    android:background="@drawable/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.login.LoginActivity">


    <EditText
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:filterTouchesWhenObscured="false"
        android:text="@string/e_kart"
        android:textColor="#FFFFFF"
        android:textSize="51sp"
        android:textStyle="bold"
        app:backgroundTint="#03FFFFFF" />

    <EditText
        android:id="@+id/registerNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:textStyle="italic"
android:textColorHint="@color/white"
        android:textAlignment="center"
        android:hint="@string/phone_number"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textColor="#F6E8E8"
        android:layout_below="@id/logo"
        android:autofillHints="Number" />


    <EditText
        android:id="@+id/registerpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerNumber"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="@color/white"
        android:hint="@string/password"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:labelFor="@id/checkBox"
        android:text="@string/remember_me"
        android:textColor="#F6E8E8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/registerpassword"
        app:layout_constraintTop_toBottomOf="@+id/registerNumber" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="272dp"
        android:layout_height="94dp"
        android:layout_below="@id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/LOGIN"
        android:textColor="#F6E8E8"
        android:textColorHint="#F8F3F3"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#004CAF50"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/iamadmin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/i_am_admin"
        android:textColor="#F6E8E8"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/iamnotadmin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/i_am_not_admin"
        android:textColor="#F6E8E8"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:textAlignment="textEnd"
        />

</RelativeLayout>